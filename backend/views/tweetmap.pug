//-Displays GeoJSON data for Deck.gl
extends layout

block content

	div(class="row")
		div(class="col-sm-1")
			img(src="images/Twitter_Logo_WhiteOnBlue.png" align="left" width="64px")
		div(class="col-sm-11")
			h1 VisCrime: Tracking Tweet Data
	div(class="card")
		div(id="map")
	
	script.
		var data = !{JSON.stringify(chicagoTestData)}
		setTrajectoryData(data)

	//- Define default position values and render map to the screen
	script(src="./scripts/map_render.js")
	//- Marker clusterer for reducing map clutter
	script(src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js")
	//- Verify with API key
	script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC-PIPhjfg5Cm1f8eTaJ9jPsACSuZ7gViU&callback=initPOCTrajectoryAlgorithm")

